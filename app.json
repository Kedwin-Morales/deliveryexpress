{
  "expo": {
    "name": "DeliveryExpress",
    "slug": "DeliveryExpress",
    "version": "0.0.1",
    "orientation": "portrait",
    "icon": "./assets/images/icono-principal.png",
    "scheme": "delivery",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,

    "ios": {
      "supportsTablet": true
    },

    "android": {
      "package": "com.deliveryexpress.delivery",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icono-principal.png",
        "backgroundColor": "#003399"
      },
      "edgeToEdgeEnabled": true,
      "googleServicesFile": "./google-services.json",
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "FOREGROUND_SERVICE"
      ]
    },

    "androidStatusBar": {
      "backgroundColor": "#003399",
      "barStyle": "light-content"
    },

    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },

    "plugins": [
      "expo-router",
      "expo-notifications",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/icono-principal.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#003399"
        }
      ]
    ],

    "experiments": {
      "typedRoutes": true
    },

    "extra": {
      "MAPBOX_ACCESS_TOKEN": "pk.eyJ1IjoiYWRyaWFuZWxjYTE2IiwiYSI6ImNtZ3J6b3poczBvNXEybHBuanlhc3ZyemUifQ.BIjJSTufD_G9pcc1KpKsng",
      "router": {},
      "eas": {
        "projectId": "5f760eaf-8a1a-4e9a-8a3e-b278ad887c4b"
      }
    }
  }
}
